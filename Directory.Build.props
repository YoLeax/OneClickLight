<!-- This file contains project properties used by the build. -->
<Project>

  <!-- Plugin Metadata -->
  <PropertyGroup>
    <PluginId>OneClickLight</PluginId>
    <PluginName>OneClickLight</PluginName>
    <Authors>YoLeax</Authors>
    <Version>0.0.1</Version>
    <GameVersion>1.39.1</GameVersion>
    <Description>Settings of environment, color, light, chroma, all in one click to switch.</Description>
    <!--<PluginIcon></PluginIcon>-->
    <!--<ProjectSource></ProjectSource>-->
    <!--<ProjectHome></ProjectHome>-->
    <!--<DonateUrl></DonateUrl>-->
